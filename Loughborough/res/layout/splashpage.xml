<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lboro_fountain"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageViewLboroLogo"
        android:layout_width="244dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/lborologotrans" />

    <TextView
        android:id="@+id/textViewLboroUni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageViewLboroLogo"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageViewLboroLogo"
        android:layout_marginBottom="24dp"
        android:layout_centerVertical="true"
        android:text="Loughborough University"
        android:textColor="#551a8b"
        android:textSize="21sp" />

</RelativeLayout>
